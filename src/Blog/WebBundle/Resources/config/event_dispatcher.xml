<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">


	<parameters>
		<parameter key="blog.webbundle.request.listener.class">Blog\WebBundle\Request\Listener</parameter>
	</parameters>
  
	<services>
		<service id="blog.webbundle.request.listener" class="%blog.webbundle.request.listener.class%">
			<tag name="kernel.listener" event="core.request" method="handle" priority="-129" /> <!-- as of secuirity has -128 prority -->
			<argument type="service" id="service_container" />
			<argument type="service" id="router" />
			<argument type="service" id="logger" on-invalid="ignore" />
		</service>
	</services>
</container>
