<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="twig.extension.blog.web" class="Blog\WebBundle\Twig\Extension\WebExtension" public="false">
            <tag name="twig.extension" />
            <argument type="service" id="twig.loader" />
        </service>

        <service id="blog.web.listener" class="Blog\WebBundle\ControllerListener">
            <tag name="kernel.listener" event="onCoreController" />
            <argument type="service" id="twig.extension.blog.web" />
        </service>
    </services>
</container>