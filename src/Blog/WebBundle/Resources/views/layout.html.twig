<!DOCTYPE html>
<html>
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
		<title>{% block title %}Blog{% endblock %}</title>
		
		<link rel="stylesheet" href="{{ asset('bundles/blogweb/css/main.css') }}" type="text/css" media="all" />
		
		<script src="{{ asset('bundles/blogweb/js/main.js') }}" type="text/javascript" /></script>
		
		<link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
	</head>

	<body>
		<div id="mainWrapper">
			<div id="menu">
				{{ menu('main') }}
			</div>

			<div id="notMenuWrapper">
				{# @todo breadcrumbs #}
				<div id="breadcrumbs">&nbsp;</div> 
				
				<div id="main">
					{% if error is defined %}
					<div class="error"><h4>{{ error }}</h4></div>
					{% endif %}

					{% if app.session.flash('notice') %}
					<div class="flash-message">
						<em>Notice</em>: {{ app.session.flash('notice') }}
					</div>
					{% endif %}

					<div id="content">
					{% block content %}
					{% endblock %}
					</div>

					{% if code is defined %}
					<h2>Code behind this page</h2>
					<div class="code-content">{{ code|raw }}</div>
					{% endif %}
				</div>
			</div>
		</div>
	</body>
</html>